{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "noImplicitAny": false,
    "esModuleInterop": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "tldjs": ["./core/misc/tldjs.noop"],
      "core/*": ["./core/*"],
      "node": ["../../node_modules/@types/node"]
    },
    "types": ["@nuxt/types", "@types/node", "@nuxtjs/sentry"],
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../build",
    ".nuxt",
    "./services",
    "./core"
  ]
}
